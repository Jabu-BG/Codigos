#include <stdio.h>

int main() {
    
    float peso, altura, imc;
 
    printf("Digite o Peso: ");
    scanf("%f", &peso);
    printf("Digite a Altura: ");
    scanf("%f", &altura);

    imc = peso / (altura * altura);
 
    printf("Seu IMC é: %.2f\n", imc); 
    if (imc <= 18.4) {
        printf(" Cuidado! Você está abaixo do peso ideal. ");
    } else if ((imc >= 18.5) && (imc <= 24.99)) {
        printf(" Parabéns! Você está no peso ideal. ");
    }  else if ((imc >= 25) && (imc <= 29.99)) {
        printf(" Você está com sobrepeso. ");
    } else if ((imc >= 30) && (imc <= 34.99)) {
        printf(" Você está com obesidade grau 1. ");
    } else if ((imc >= 35) && (imc <= 29.99)) {
        printf ( "Cuide-se por favor! Você já está em obesidade grau 2. ");
    } else if (imc >= 40) {
        printf(" Cuidado! Você vai morrer emm! Você já está em obesidade grau 3. ");
    }

    return 0;
}
